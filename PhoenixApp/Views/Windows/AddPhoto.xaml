<Window x:Class="PhoenixApp.Views.Windows.AddPhoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixApp.Views.Windows"
        mc:Ignorable="d"
        Title="Добавить фото" Height="400" Width="750" Background="#FF2C78BF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".7*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height=".5*" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Ссылка на фото:" TextWrapping="Wrap" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <TextBox Name="URLTb" Grid.Column="1" Height="60" Width="400" HorizontalAlignment="Center" FontSize="35" Foreground="White" Background="{x:Null}"/>
        <Button Name="OKBtn" Content="ДОБАВИТЬ" Click="OKBtn_Click" Grid.Row="1" Grid.ColumnSpan="2" FontSize="40" Background="#FF3574F1" 
                BorderBrush="#FF9C9644" Foreground="#FFFFFEFE" BorderThickness="4" Height="100" Width="500"/>
    </Grid>
</Window>
