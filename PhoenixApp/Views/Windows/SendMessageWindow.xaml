<Window x:Class="PhoenixApp.Views.Windows.SendMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoenixApp.Views.Windows"
        mc:Ignorable="d"
        Title="Связь с работадателем" Height="600" Width="700" Background="#FF2C78BF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <TextBlock Text="Оставить сообщение" FontSize="40" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Height="350" Width="500" Foreground="White" Background="{x:Null}" Grid.Row="1"/>
        <Button Name="SendMessageBTn" Click="SendMessageBTn_Click" FontSize="40" Background="#FF3574F1" 
                BorderBrush="#FF9C9644" Foreground="#FFFFFEFE" BorderThickness="4"
                Content="ОФОРМИТЬ" Grid.Row="2" Width="500" Height="100"/>
    </Grid>
</Window>
